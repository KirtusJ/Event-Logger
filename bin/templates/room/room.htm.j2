{% extends 'layout/default.htm.j2' -%}

{% block title -%}
	{% if room -%}
		r/{{ room['name'] }}
	{% else -%}
		Room not found
	{% endif -%}
{% endblock -%}

{% block content -%}
	{% if room -%}
		<h1>{{ room['name'] }}</h1>
		<p>ID: [{{ room['id'] }}]</p>
		<p>{{ room['description'] }}</p>
		<p>Owner: [{{ room['owner_username'] }}]</p>
		<p>{{ room['created'] }}</p>
		{% if room['owner_username'] == g.user.username -%}
			<span><a href="/room/{{ room['name'] }}/edit">edit room</a></span>
		{% endif -%}
		{% if posts -%}
			{% for post in posts -%}
				<div class="post">
					<h3 class="title">{{ post['title'] }}</h3>
					<p class="body">{{ post['body'] }}</p>
					<p class="created">{{ post['created'] }}</p>
					<span><a href="/post/{{ post['id'] }}">comments</a> <a href="/u/{{ post['author_username'] }}">author</a></span>
					{% if g.user.username == post['post_author'] -%}
						<span><a href="/post/{{ post['id'] }}/edit">edit</a> <a href="/post/{{ post['id'] }}/delete">delete</a></span>
					{% endif -%}
				</div>
			{% endfor -%}
		{% else -%}
		<h3>No posts</h3>
		{% endif -%}
	{% else -%}
		<h1>Room not found</h1>
	{% endif -%}
{% endblock -%}
