{% extends 'layout/default.htm.j2' -%}

{% block title -%}
	{% if room -%}
		r/{{ room['name'] }}
	{% else -%}
		Room not found
	{% endif -%}
{% endblock -%}

{% block content -%}
	{% if room -%}
		<h1>{{ room['name'] }}</h1>
		<p>ID: [{{ room['id'] }}]</p>
		<p>{{ room['description'] }}</p>
		<p>Owner: [{{ room['owner'] }}]</p>
		<p>{{ room['created'] }}</p>
		{% if room['owner'] == g.user.username -%}
			<span><a href="/room/{{ room['name'] }}/edit">edit room</a></span>
		{% endif -%}
	{% else -%}
		<h1>Room not found</h1>
	{% endif -%}
{% endblock -%}
