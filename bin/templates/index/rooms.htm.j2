{% extends 'layout/default.htm.j2' -%}

{% block title -%}{{ project[0] }}: list of rooms{% endblock -%}

{% block content -%}
	{% if g.user -%}
		<h3>Create a room</h3>
		<form class="room" action="/room/new" method="post">
			<input type="hidden" name="room" value="create">
			<input type="text" name="name" placeholder="Name...">
			<input type="text" name="description" placeholder="Description...">
			<input type="submit" name="Submit">
		</form>
	{% endif -%}
	<h1>Rooms</h1>
	{% if rooms -%}
		{% for room in rooms -%}
			{% if not loop.last -%}
				<span><a href="/r/{{ room['name'] }}">{{ room['name'] }}</a>, </span>
			{% elif loop.last -%}
				<span><a href="/r/{{ room['name'] }}">{{ room['name'] }}</a></span>
			{% endif -%}
		{% endfor -%}
	{% else -%}
		<span>No rooms</span>
	{% endif -%}
{% endblock -%}
