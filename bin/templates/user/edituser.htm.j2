{% extends 'layout/default.htm.j2' -%}

{% block title -%}Edit Profile{% endblock -%}

{% block content -%}
	<h1>{{ user['username'] }}'s profile</h1>
	<form class="user" action="/user/edit" method="POST" enctype="multipart/form-data">
		<input type="hidden" name="user" name="update-profile-picture">
		<label>Profile Picture</label>
		<br>
		<input type="file" name="file" style="width: 400px; margin-bottom: 30px" accept="image/*">
		<br>
		<input type="submit" name="Submit">
	</form>
	<br>
	<form class="user" action="/user/edit" method="POST">
		<input type="hidden" name="user" value="update">
		<input type="text" name="username" style="width: 400px; margin-bottom: 30px" value="{{ user['username'] }}">
		<br>
		<input type="text" name="email" style="width: 400px; margin-bottom: 30px" value="{{ user['email'] }}">
		<br>
		{% if user['bio'] -%}
			<input type="text" name="bio" style="width: 400px; margin-bottom: 30px" value="{{ user['bio'] }}">
		{% else -%}
			<input type="text" name="bio" style="width: 400px; margin-bottom: 30px" placeholder="Bio...">
		{% endif -%}
		<br>
		<input type="password" name="password" style="width: 400px; margin-bottom: 30px" placeholder="Password...">
		<br>
		<input type="submit" name="Submit">
	</form>
{% endblock -%}
